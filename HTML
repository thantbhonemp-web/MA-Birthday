        }
        .balloon.popped {
            opacity: 0;
            transform: scale(1.5);
        }
        .balloon:nth-child(1) { background-color: #ff0000; left: 5%; animation-delay: 0s; }
        .balloon:nth-child(2) { background-color: #00ff00; left: 25%; animation-delay: 1s; }
        .balloon:nth-child(3) { background-color: #0000ff; right: 25%; animation-delay: 2s; }
        .balloon:nth-child(4) { background-color: #ffff00; left: 45%; animation-delay: 0.5s; }
        .balloon:nth-child(5) { background-color: #ff00ff; right: 5%; animation-delay: 1.5s; }
        .balloon:hover {
            transform: scale(1.2);
        }
        @keyframes fadeIn {
